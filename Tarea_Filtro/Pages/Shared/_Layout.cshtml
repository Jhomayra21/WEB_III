<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Practica1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Practica1.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="cabeza">
        <span class="cabeza-logo"><b>GESTION DE TAREAS</b></span>
    </div>
    <div class="contenedor-menu">
        <nav class="menu-principal">
            <ul>
                <li>
                    <a class="menu-link" asp-page="/Index">
                        Inicio
                    </a>
                </li>
                <li>
                    <a class="menu-link" asp-page="/Finalizada">
                        Lista Tareas Finalizadas
                    </a>
                </li>
                <li>
                    <a class="menu-link" asp-page="/Cancelada">
                        Lista Tareas Canceladas
                    </a>
                </li>
                <li>
                    <a class="menu-link" asp-page="/Pendiente">
                        Lista Tareas Pendientes
                    </a>
                </li>
                <li>
                    <a class="menu-link" asp-page="/EnCurso">
                        Lista Tareas En Curso
                    </a>
                </li>
            </ul>
        </nav>
        <main class="contenedor-uno" role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>