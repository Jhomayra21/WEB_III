@model WAMVC.Models.ProductoModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="card">
    <div class="card-header">
        <h2>Detalles del Producto</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                    <dd class="col-sm-8">
                        <span class="h5 text-success">@Html.DisplayFor(model => model.Precio)</span>
                    </dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Stock > 10 ? "bg-success" : Model.Stock > 0 ? "bg-warning" : "bg-danger")">
                            @Html.DisplayFor(model => model.Stock) unidades disponibles
                        </span>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Información del Inventario</h5>
                        <p class="card-text">
                            <strong>Estado del Stock:</strong><br>
                            @if (Model.Stock > 10)
                            {
                                <span class="text-success"><i class="fas fa-check-circle"></i> Stock disponible</span>
                            }
                            else if (Model.Stock > 0)
                            {
                                <span class="text-warning"><i class="fas fa-exclamation-triangle"></i> Stock bajo</span>
                            }
                            else
                            {
                                <span class="text-danger"><i class="fas fa-times-circle"></i> Sin stock</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        @if (Model.DetallePedidos != null && Model.DetallePedidos.Any())
        {
            <hr />
            <h4>Historial de Pedidos</h4>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Pedido #</th>
                            <th>Cliente</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.DetallePedidos)
                        {
                            <tr>
                                <td>@detalle.IdPedido</td>
                                <td>@detalle.Pedido?.Cliente?.Nombre</td>
                                <td>@detalle.Cantidad</td>
                                <td>@detalle.PrecioUnitario.ToString("C")</td>
                                <td>@detalle.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>
