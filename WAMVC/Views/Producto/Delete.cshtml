@model WAMVC.Models.ProductoModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="card">
    <div class="card-header">
        <h2>Eliminar Producto</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h4>¿Está seguro que desea eliminar este producto?</h4>
            <p>Esta acción no se puede deshacer.</p>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Stock > 10 ? "bg-success" : Model.Stock > 0 ? "bg-warning" : "bg-danger")">
                            @Html.DisplayFor(model => model.Stock) unidades
                        </span>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                @if (Model.Stock > 0)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Nota:</strong> Este producto tiene stock disponible. 
                        Asegúrese de que no tenga pedidos pendientes antes de eliminarlo.
                    </div>
                }
            </div>
        </div>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>
