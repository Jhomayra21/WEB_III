@model WAMVC.Models.PedidoModel

@{
    ViewData["Title"] = "Crear Pedido";
}

<div class="card">
    <div class="card-header">
        <h2>Crear Nuevo Pedido</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="FechaPedido" class="form-label"></label>
                        <input asp-for="FechaPedido" class="form-control" type="date" />
                        <span asp-validation-for="FechaPedido" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="IdCliente" class="form-label"></label>
                        <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente">
                            <option value="">-- Seleccione un cliente --</option>
                        </select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <textarea asp-for="Direccion" class="form-control" rows="3" placeholder="Dirección de entrega del pedido"></textarea>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="MontoTotal" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="MontoTotal" class="form-control" type="number" step="0.01" min="0.01" />
                        </div>
                        <span asp-validation-for="MontoTotal" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save"></i> Crear Pedido
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}