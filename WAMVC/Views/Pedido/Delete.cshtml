@model WAMVC.Models.PedidoModel

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="card">
    <div class="card-header">
        <h2>Eliminar Pedido</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h4>¿Está seguro que desea eliminar este pedido?</h4>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaPedido)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaPedido)</dd>
                    
                    <dt class="col-sm-4">Cliente</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cliente.Nombre)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MontoTotal)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MontoTotal)</dd>
                </dl>
            </div>
        </div>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>