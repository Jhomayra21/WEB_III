@model WAMVC.Models.DetallePedidoModel

@{
    ViewData["Title"] = "Editar Detalle de Pedido";
}

<div class="card">
    <div class="card-header">
        <h2>Editar Detalle de Pedido</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="IdPedido" class="form-label"></label>
                        <select asp-for="IdPedido" class="form-select" asp-items="ViewBag.IdPedido"></select>
                        <span asp-validation-for="IdPedido" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="IdProducto" class="form-label"></label>
                        <select asp-for="IdProducto" class="form-select" asp-items="ViewBag.IdProducto"></select>
                        <span asp-validation-for="IdProducto" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Cantidad" class="form-label"></label>
                                <input asp-for="Cantidad" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PrecioUnitario" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" min="0.01" />
                                </div>
                                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}