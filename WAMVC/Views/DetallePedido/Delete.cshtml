@model WAMVC.Models.DetallePedidoModel

@{
    ViewData["Title"] = "Eliminar Detalle de Pedido";
}

<div class="card">
    <div class="card-header">
        <h2>Eliminar Detalle de Pedido</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h4>¿Está seguro que desea eliminar este detalle de pedido?</h4>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                    
                    <dt class="col-sm-4">Pedido</dt>
                    <dd class="col-sm-8">Pedido #@Html.DisplayFor(model => model.IdPedido)</dd>
                    
                    <dt class="col-sm-4">Cliente</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Pedido.Cliente.Nombre)</dd>
                    
                    <dt class="col-sm-4">Producto</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Producto.Nombre)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cantidad)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PrecioUnitario)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PrecioUnitario)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Subtotal)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Subtotal)</dd>
                </dl>
            </div>
        </div>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>